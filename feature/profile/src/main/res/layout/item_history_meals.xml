<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="6dp"
    android:elevation="2dp"
    android:radius="2dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@drawable/card_history_detail_background"
        android:padding="2dp">


        <ImageView
            android:id="@+id/foodImageView"
            android:layout_width="139dp"
            android:layout_height="101dp"
            android:layout_marginStart="12dp"
            android:layout_marginBottom="12dp"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/foodCalorieTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="200"
            android:textColor="@color/blue"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/caloriesIcon"
            app:layout_constraintStart_toStartOf="@+id/caloriesIcon"
            app:layout_constraintTop_toBottomOf="@+id/caloriesIcon" />

        <ImageView
            android:id="@+id/caloriesIcon"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginStart="14dp"
            android:src="@drawable/icon_kcal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/foodImageView"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/foodFatTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0g"
            android:textColor="@color/blue"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/fatIcon"
            app:layout_constraintStart_toStartOf="@+id/fatIcon"
            app:layout_constraintTop_toBottomOf="@+id/fatIcon" />

        <ImageView
            android:id="@+id/fatIcon"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginStart="18dp"
            android:src="@drawable/icon_fat"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/carbsIcon"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/foodProteinTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="15g"
            android:textColor="@color/blue"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/proteinIcon"
            app:layout_constraintStart_toStartOf="@+id/proteinIcon"
            app:layout_constraintTop_toBottomOf="@+id/proteinIcon" />

        <ImageView
            android:id="@+id/proteinIcon"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginStart="18dp"
            android:src="@drawable/icon_protein"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/caloriesIcon"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/foodCarbohydrateTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="30g"
            android:textColor="@color/blue"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/carbsIcon"
            app:layout_constraintStart_toStartOf="@+id/carbsIcon"
            app:layout_constraintTop_toBottomOf="@+id/carbsIcon" />

        <ImageView
            android:id="@+id/carbsIcon"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginStart="18dp"
            android:src="@drawable/icon_carby"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/proteinIcon"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/fooodNameTextView"
            android:layout_width="173dp"
            android:layout_height="24dp"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:text=""
            android:textColor="@color/chocolate"
            android:textSize="16dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/fatIcon"
            app:layout_constraintStart_toStartOf="@+id/caloriesIcon"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/foodCounterTextView"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_marginStart="6dp"
            android:layout_marginTop="7dp"
            android:layout_marginBottom="7dp"
            android:background="@color/black"
            android:gravity="center"
            android:text=""
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="14dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/foodImageView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
