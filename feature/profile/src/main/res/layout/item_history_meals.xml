<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/foodCalorieTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="@+id/foodImageView"
        app:layout_constraintStart_toStartOf="@+id/foodImageView"
        tools:layout_editor_absoluteY="160dp" />

    <TextView
        android:id="@+id/foodProteinTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="66dp"
        android:text="TextView"
        app:layout_constraintBottom_toBottomOf="@+id/foodFatTextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/foodFatTextView" />

    <TextView
        android:id="@+id/foodFatTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="@+id/foodCalorieTextView"
        app:layout_constraintStart_toStartOf="@+id/foodCalorieTextView"
        app:layout_constraintTop_toBottomOf="@+id/foodCalorieTextView" />

    <TextView
        android:id="@+id/foodCarbohydrateTextView"
        android:layout_width="60dp"
        android:layout_height="17dp"
        android:layout_marginStart="66dp"
        android:text="TextView"
        app:layout_constraintBottom_toBottomOf="@+id/foodFatTextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/foodFatTextView" />

    <ImageView
        android:id="@+id/foodImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="19dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />
</androidx.constraintlayout.widget.ConstraintLayout>
